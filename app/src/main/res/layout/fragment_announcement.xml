<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnnouncementFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/celebrant_one" />


    <TextView
        android:id="@+id/yayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="152dp"
        android:drawableEnd="@drawable/ic_confetti"
        android:fontFamily="cursive"
        android:text="Yaay"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/mailImageButton"
        app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/shapeableImageView"
        app:layout_constraintTop_toTopOf="@+id/shapeableImageView"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/announcementTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It's Victor's birthday."
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/yayTextView"
        app:layout_constraintStart_toStartOf="@+id/yayTextView"
        app:layout_constraintTop_toBottomOf="@+id/yayTextView" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/phoneImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_background"
        android:src="@drawable/ic_phone"
        app:layout_constraintBottom_toBottomOf="@+id/mailImageButton"
        app:layout_constraintEnd_toStartOf="@+id/mailImageButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/shapeableImageView" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/mailImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_background"
        android:src="@drawable/ic_email"
        app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
        app:layout_constraintEnd_toStartOf="@+id/shareImageButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/phoneImageButton" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/shareImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/round_background"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@+id/mailImageButton"
        app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mailImageButton" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/editImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@android:color/transparent"
        android:padding="0dp"
        android:src="@drawable/ic_edit_pen"
        app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
        app:layout_constraintTop_toTopOf="@+id/shapeableImageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_pad"
        app:layout_constraintEnd_toEndOf="@+id/editImageButton"
        app:layout_constraintStart_toStartOf="@+id/editImageButton"
        app:layout_constraintTop_toBottomOf="@+id/editImageButton" />


</androidx.constraintlayout.widget.ConstraintLayout>